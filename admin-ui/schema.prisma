datasource postgresql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(uuid()) @postgresql.Uuid
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  posts     Post[]    @relation("Post_author")
  createdAt DateTime? @default(now())
}

model Post {
  id       String  @id @default(uuid()) @postgresql.Uuid
  title    String  @default("")
  content  Json    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  author   User?   @relation("Post_author", fields: [authorId], references: [id])
  authorId String? @map("author") @postgresql.Uuid
  tags     Tag[]   @relation("Post_tags")

  @@index([authorId])
}

model Tag {
  id    String @id @default(uuid()) @postgresql.Uuid
  name  String @default("")
  posts Post[] @relation("Post_tags")
}

model Activity {
  id              String           @id @default(uuid()) @postgresql.Uuid
  title           String           @default("")
  activityLessons ActivityLesson[] @relation("ActivityLesson_activity")
}

model ActivityLesson {
  id         String    @id @default(uuid()) @postgresql.Uuid
  activity   Activity? @relation("ActivityLesson_activity", fields: [activityId], references: [id])
  activityId String?   @map("activity") @postgresql.Uuid
  lesson     Lesson?   @relation("ActivityLesson_lesson", fields: [lessonId], references: [id])
  lessonId   String?   @map("lesson") @postgresql.Uuid
  order      Int

  @@index([activityId])
  @@index([lessonId])
}

model Lesson {
  id              String           @id @default(uuid()) @postgresql.Uuid
  title           String           @default("")
  activityLessons ActivityLesson[] @relation("ActivityLesson_lesson")
}
